<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_home"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.bookingapp.ui.fragment.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/mapsFragment"
        android:name="com.example.bookingapp.ui.fragment.MapsFragment"
        android:label="fragment_maps"
        tools:layout="@layout/fragment_maps" />
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.bookingapp.ui.fragment.MainFragment"
        android:label="MainFragment" >
        <action
            android:id="@+id/action_mainFragment_to_mapsFragment"
            app:destination="@id/mapsFragment" />
        <action
            android:id="@+id/action_mainFragment_to_onBoardFragment"
            app:destination="@id/navigation" />
        <action
            android:id="@+id/action_mainFragment_to_signInFragment"
            app:destination="@id/navigation" />
        <action
            android:id="@+id/action_mainFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_mainFragment_to_onBoarding2Fragment"
            app:destination="@id/navigation" />
        <action
            android:id="@+id/action_mainFragment_to_onBoard3Fragment"
            app:destination="@id/onBoard3Fragment" />
    </fragment>
    <fragment
        android:id="@+id/onBoard3Fragment"
        android:name="com.example.bookingapp.ui.fragment.OnBoard3Fragment"
        android:label="fragment_on_board3"
        tools:layout="@layout/fragment_on_board3" />
    <navigation
        android:id="@+id/navigation"
        app:startDestination="@id/onBoarding2Fragment">
        <fragment
            android:id="@+id/onBoardFragment"
            android:name="com.example.bookingapp.ui.fragment.OnBoardFragment"
            android:label="fragment_home"
            tools:layout="@layout/fragment_boarding">
            <action
                android:id="@+id/action_onBoardFragment_to_signInFragment"
                app:destination="@id/signInFragment" />
            <action
                android:id="@+id/action_onBoardFragment_to_onBoarding2Fragment"
                app:destination="@id/onBoarding2Fragment" />
        </fragment>
        <fragment
            android:id="@+id/signInFragment"
            android:name="com.example.bookingapp.ui.fragment.SignInFragment"
            android:label="SignInFragment" />
        <fragment
            android:id="@+id/onBoarding2Fragment"
            android:name="com.example.bookingapp.ui.fragment.OnBoarding2Fragment"
            android:label="fragment_on_boarding2"
            tools:layout="@layout/fragment_on_boarding2" />
    </navigation>
</navigation>