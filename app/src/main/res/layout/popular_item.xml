<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="hotel"
            type="com.example.bookingapp.entity.Result" />
    </data>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dimen_10dp_h"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title"
            android:text="hhhhhhhhhh"
            android:textSize="@dimen/dimen_16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/poster_url"
            app:imageUrl="@{hotel.optimizedThumbUrls.srpDesktop}"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_200dp_w"/>
    </LinearLayout>
</layout>
